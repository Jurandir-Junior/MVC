@model RoleTopMVC.ViewModels.DashboardViewModel
<head>
    <link href="~/css/style-dashboard.css" type="text/css" rel="stylesheet"/>
</head>
<body>
<main>
    <h2>Dashboard</h2>
    <section id="status-pedidos">
        <h3>Status dos Pedidos</h3>
        <div id="painel">
            <div class="box-status-pedidos aprovados">
                <h4>Aprovados</h4>
                <p>@Model.PedidosAprovados</p>
            </div>
            <div class="box-status-pedidos pendentes">
                <h4>Pendentes</h4>
                <p>@Model.PedidosPendentes</p>
            </div>
            <div class="box-status-pedidos reprovados">
                <h4>Reprovados</h4>
                <p>@Model.PedidosReprovados</p>
            </div>
        </div>
    </section>

    <section id="lista-pedidos">
        <h3>Lista de Pedidos</h3>
        <table>
            <thead>
                <tr>
                    <th rowspan="2">Nome</th>
                    <th rowspan="2">Evento</th>
                    <th rowspan="2">Tipo</th>
                    <th rowspan="2">Dia</th>
                    <th colspan="2" rowspan="2">Aprovar</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <p>Pedidos atualizados em @DateTime.Now</p>
                    </td>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var pedido in Model.Pedidos)
                {
                    <tr>
                        <td>@pedido.Cliente.Nome</td>
                        <td>@pedido.Evento.NomeEvento</td>
                        <td>@pedido.Evento.TipoEvento</td>
                        <td>@pedido.Evento.Dia</td>
                        <td><a href='@Url.Action("Aprovar","Pedido", new {id = @pedido.Id})' class="aceitar">Aceitar</a></td>
                        <td><a href='@Url.Action("Reprovar","Pedido", new {id = @pedido.Id})'class="recusar">Recusar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>
</body>